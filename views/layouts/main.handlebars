                <a href="/" class="navbar-item is-hoverable pt-1">homepage</a>
                <a href="/login" class="button is-primary">login</a>
                {{/if}}
            </nav>
        </header>

        <main>
            {{{ body }}}
        </main>

        <footer class="footer rows pb-2">
            <div class="row-is-full content has-text-centered">
                <p>
                    <a href="/">homepage</a>{{#if loggedIn}} |
                    <a href="/dashboard/">dashboard</a> |
                    <a href="/dashboard/create/">create new post</a>
                    {{else}}
                    |   <a href="/login/">login</a>
                    {{/if}}
                </p>
            </div>
            <div class="row-is-full content has-text-centered">
                <p><strong>Tech Blog</strong> by <a href="https://github.com/CHalseth">Corey Halseth</a> | made with <a href="https://bulma.io/">bulma</a> | source code:
                <a href="https://github.com/CHalseth/Tech-Blog"><i class="fab fa=github"></i></a> |
                <a href="mailto:Corey.Halseth@gmail.com"><i class="far fa-envelop"></i></a>
                </p>
            </div>
        </footer>
    </div>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
    
</body>
</html>